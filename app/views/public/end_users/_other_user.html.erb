<% if end_user.is_deleted == true %>
  <p>このユーザーは退会済みです。</p>
<% else %>
  <div class="selection-group">
    <div class="text-center">
      <%= image_tag end_user.get_profile_image(200,200), class: "rounded-circle" %>
      <p class="title"><%= end_user.nickname %></p>
      <div id="follow_btn_<%= end_user.id %>">
        <%= render 'public/relationships/btn', end_user: end_user %>
      </div>
      <div class="selection-group mt-3">
        <div class="selection-group">
          フォロー数：
          <p id="follow_count_<%= end_user.id %>" class="mr-3">
            <%= render 'public/relationships/follow_count', end_user: end_user %>
          </p>
        </div>
        <div class="selection-group">
          フォロワー数：
          <p id="follower_count_<%= end_user.id %>">
            <%= render 'public/relationships/follower_count', end_user: end_user %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5 text-center">
    <%= link_to "/personal_index/#{end_user.id}", class: 'end_user-responsive btn mr-5 ml-5 btn-outline-dark btn-lg' do %>
      <%= image_tag asset_path('diary_icon.png') %> Diary
    <% end %>
    <%= link_to end_user_favorites_path(end_user), class: 'btn  btn-outline-dark btn-lg' do %>
      <%= image_tag asset_path('iine.png') %> Favorite Diary
    <% end %>
  </div>

  <table class="table table-bordered text-center mt-5">
    <tr>
      <th>ニックネーム</th>
      <td><%= end_user.nickname %></td>
    </tr>
    <tr>
      <th>性別</th>
      <td><%= end_user.gender_i18n %></td>
    </tr>
    <tr>
      <th>体重</th>
      <td>
        <% if @recent_weight.nil? %>
          <%= end_user.start_weight %>kg
        <% else %>
          <%= @recent_weight.value %>kg
        <% end %>
      </td>
    </tr>
    <tr>
      <th>年齢</th>
      <td><%= end_user.age %>歳</td>
    </tr>
    <tr>
      <th>身長</th>
      <td><%= end_user.height %>cm</td>
    </tr>
  </table>
<% end %>