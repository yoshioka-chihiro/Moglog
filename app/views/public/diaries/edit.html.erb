<h3>編集する</h3>
<%= render "public/shared/error_messages", resource: @diary %>

<%= form_with model: @diary, local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :本文 %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit '更新' %>
<% end %>