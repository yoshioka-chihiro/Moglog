<h3>投稿する</h3>

<%= form_with model: @diary, local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :本文 %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit '投稿' %>
<% end %>


<h3>みんなの日記</h3>
<% @diaries.each do |diary| %>
  <%= link_to diary_path(diary) do %>
    <% if diary.end_user.nickname.empty? %>
      匿名希望さん
    <% else %>
      <%= diary.end_user.nickname %>
    <% end %>
      <%= diary.end_user.gender_i18n %>
      <%= diary.title %>
      <%= diary.body %>
  <% end %>
<% end %>

