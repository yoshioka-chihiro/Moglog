<% if diary_comment.already_reported?(current_end_user) %>
  <%= link_to diary_diary_comment_reports_path(diary,diary_comment), method: :delete, class: "btn btn-info pull-right" do %>
    <i class="fas fa-eraser"></i>通報を取り消す
  <% end %>
<% else %>
  <%= link_to diary_diary_comment_reports_path(diary.id, diary_comment.id), method: :post, class: "btn btn-danger pull-right" do %>
    <i class="fas fa-ban"></i>通報する
  <% end %>
<% end %>

