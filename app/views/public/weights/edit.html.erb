<%= render 'public/shared/error_messages', resource: @weight %>
<%= form_with model: @weight do |f| %>
    <!--<= render 'layouts/error_messages', model: f.object %>-->
    <%= f.label :value, '体重' %>
    <%= f.number_field :value, step: '0.1' %>
    <%= f.label :record_day, '日時' %>
    <%= f.date_field :record_day %>
    <%= f.submit '更新', class: 'waves-effect waves-light btn orange' %>
    <%= link_to 'キャンセル', weights_path, class: 'waves-effect waves-light btn grey' %>
  <% end %>
