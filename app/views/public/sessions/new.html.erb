<div class="container mt-2">
  <h3 class="mini-title">ログイン</h3>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_with model: @end_user, url: end_user_session_path do |f| %>

    <div class="ml-auto">

      <div class="form-group row">
        <%= f.label :email, class: "col-5" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-lg-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-5" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-lg-4" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "ログイン", class: 'btn btn-sm btn-info col-lg-2 text-center',style: "color:white;" %>
      </div>

    </div>

  <% end %>
</div>

<div class="field mx-auto text-center mt-5 md-5">
  登録がお済みでない方はこちらから <%= render "public/shared/links" %>
</div>
