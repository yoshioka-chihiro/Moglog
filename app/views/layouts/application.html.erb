<!DOCTYPE html>
<html>
  <head>
    <title>Moglog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br>
    <header>
      <% if end_user_signed_in? %>
        <%= link_to 'マイページ', end_user_path(current_end_user) %>
        <%= link_to '食事登録', meals_path %>
        <%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete %>
        <%= link_to '会員一覧', end_users_path %>
        <%= link_to '体調を登録', conditions_path %>
        <%= link_to '体重を登録', weights_path %>
        <%= link_to '日記を書く', diaries_path %>
      <% else %>
        <%= link_to 'ログイン', new_end_user_session_path %>
        <%= link_to '新規登録', new_end_user_registration_path %>
      <% end %>

      <% if admin_signed_in? %>
      <h1>管理者としてログイン中です</h1>
        <%= link_to '会員一覧', admin_end_users_path %>
        <%= link_to '食品一覧', admin_foods_path %>
        <%= link_to '管理者ログアウト', destroy_admin_session_path, method: :delete %>
      <% else %>
       <%= link_to '管理者ログイン', new_admin_session_path %>
      <% end %>
    </header>
    <div class="text-success">
      <%= flash[:notice] %>
    </div>
    <div class="text-danger">
      <%= flash[:alret] %>
    </div>
    <%= yield %>




  </body>
</html>
