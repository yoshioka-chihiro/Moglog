<h3 class="mini-title mb-3 text-center mt-5">
  検索結果(
  <% if params[:q].present? && params[:q][:name_cont].present? %>
    <%= params[:q][:name_cont] %>
  <% end %>
  )
</h3>

<div class="container">
  <div class="justify-content-center row">
    <table class="table">
      <tr>
        <th>食品名</th>
        <th>概要</th>
        <th>カロリー</th>
        <th>タンパク質</th>
        <th>炭水化物</th>
        <th>脂質</th>
        <th>食物繊維</th>
        <th></th>
      </tr>
      <% @results.each do |result| %>
        <tr>
          <td><%= result.name %></td>
          <td><%= result.introduction %></td>
          <td><%= result.calorie %>kcal</td>
          <td><%= result.protein %>g</td>
          <td><%= result.carbohydrate %>g</td>
          <td><%= result.fat %>g</td>
          <td><%= result.fiber %>mg</td>
          <td>
            <%=link_to '詳細', admin_food_path(result) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row justify-content-center"><%= paginate @results %></div>