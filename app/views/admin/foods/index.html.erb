<div class="container">
  
  <div class="justify-content-end row mt-5">
  <%= search_form_for @q, url: search_admin_foods_path, class: "search-form" do |f| %>
    <%= f.text_field :name_cont, placeholder: "食品を検索" %>
    <%= f.submit '検索' %>
  <% end %>
</div>
  
  <h1>食品一覧</h1>
  <div class="text-center">
    <%= link_to '食品登録', new_admin_food_path, class: "btn btn-info" %>
  </div>
  <br>
  <table class="table">
    <tr>
      <th>食品名</th>
      <th>概要</th>
      <th>カロリー</th>
      <th>タンパク質</th>
      <th>炭水化物</th>
      <th>脂質</th>
      <th>食物繊維</th>
      <th></th>
    </tr>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.introduction %></td>
      <td><%= food.calorie %>kcal</td>
      <td><%= food.protein %>g</td>
      <td><%= food.carbohydrate %>g</td>
      <td><%= food.fat %>g</td>
      <td><%= food.fiber %>mg</td>
      <td>
        <%=link_to '詳細', admin_food_path(food) %>
      </td>
    </tr>
    <% end %>
  </table>
  
  <% unless @foods.empty? %>
    <div class="row justify-content-center"><%= paginate @foods %></div>
  <% end %>
</div>